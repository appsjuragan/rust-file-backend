ALLOWED_ORIGINS=https://myfiles1.thepihouse.my.id,https://api.myfiles1.thepihouse.my.id,http://localhost:3000

# PostgreSQL (default)
DATABASE_URL=postgres://filebackend:filebackend@127.0.0.1:5432/filebackend
# SQLite (alternative)
# DATABASE_URL=sqlite:backend.db

JWT_SECRET=your_super_secret_jwt_key
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=uploads
MINIO_REGION=us-east-1

# Security Configuration
# MAX_FILE_SIZE=268435456 # 256MB (default)
# UPLOADS_PER_HOUR=250
# ENABLE_VIRUS_SCAN=true
# VIRUS_SCANNER_TYPE=clamav # Options: clamav, noop
# CLAMAV_HOST=127.0.0.1
# CLAMAV_PORT=3310
# CHUNK_SIZE=10485760 # 10MB

# Security & Upload Configuration
# Maximum file size in bytes (1GB = 1073741824)
MAX_FILE_SIZE=1073741824
# Number of uploads allowed per hour per user
UPLOADS_PER_HOUR=250
# Size of data chunks for hash calculation (10MB)
CHUNK_SIZE=10485760
# Staging file cleanup age in hours
STAGING_CLEANUP_AGE_HOURS=24


# OIDC Configuration
OIDC_ISSUER_URL=http://localhost:9100
OIDC_CLIENT_ID=foo
OIDC_CLIENT_SECRET=bar
OIDC_REDIRECT_URL=http://localhost:3000/auth/oidc/callback
# Set to true if OIDC provider issuer URL doesn't match the one reachable by backend (e.g. in docker/dev)
OIDC_SKIP_DISCOVERY=true
